<?xml version="1.0" encoding="UTF-8"?>

<configuration status="debug">

    <Appenders>
        <!-- 콜솔 -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd hh:mm:ss} %5p [%c] %m%n"/>     <!--patteurn 로그메시지를 어떻게 남기는지-->

        </Console>
    </Appenders>

    <loggers>
        <root level="info" additivity="true"> <!--debug 를 error로 변경하면  log에 에러가 찍힌다.-->
            <AppenderRef ref="console"/>
        </root>
    </loggers>

</configuration>
